{
  // Visit https://aka.ms/tsconfig to read more about this file
  "compilerOptions": {
    /* Output Settings */
    // "rootDir": "./src",
    // "outDir": "./dist",

    /* Environment */
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",

    /* Compatibility */
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,

    /* Type Checking */
    "strict": true,
    "skipLibCheck": true,

    /* Source Maps */
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,

    /* Module Behavior */
    "verbatimModuleSyntax": false,  
    "isolatedModules": false,

    /* JSX (not needed for backend, but harmless) */
    "jsx": "react-jsx"
  },

  "ts-node": {
    "esm": true
  }
}
